# ================================
# SensorPulse - Environment Variables
# ================================
# Copy this file to .env and fill in your values

# ----------------
# PostgreSQL
# ----------------
POSTGRES_USER=sensorpulse
POSTGRES_PASSWORD=changeme_secure_password
POSTGRES_DB=sensorpulse
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

# ----------------
# External MQTT Broker
# ----------------
MQTT_BROKER_IP=192.168.1.100
MQTT_PORT=1883
MQTT_USER=mqtt_user
MQTT_PASS=mqtt_password
MQTT_TOPIC=zigbee2mqtt/+

# ----------------
# API Configuration
# ----------------
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
SECRET_KEY=changeme_generate_a_secure_random_string

# ----------------
# Google OAuth 2.0
# ----------------
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
OAUTH_REDIRECT_URI=https://sensors.yourdomain.com/auth/callback

# ----------------
# Resend (Email Reports)
# ----------------
RESEND_API_KEY=re_your_api_key
EMAIL_FROM=noreply@yourdomain.com

# ----------------
# Cloudflare Tunnel
# ----------------
CLOUDFLARE_TUNNEL_TOKEN=your_tunnel_token

# ----------------
# Frontend
# ----------------
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000/ws

# ----------------
# Version (injected at build time)
# ----------------
APP_VERSION=0.1.0
